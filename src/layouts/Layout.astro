---
import Header from './Header.astro';
import Footer from './Footer.astro';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="../../public/favicon.png">
        <title>{ title }</title>
    </head>
    <header>
        <Header />
    </header>
    <body>
        <slot />
    </body>
    <Footer />
</html>