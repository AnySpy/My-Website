        left: 12px;
        top: 10px;
        border-radius: 95%;
    }
    .name {
        position: absolute;
        font-size: 15px;
        top: 22px;
        left: 260px;
    }
    .info {
        position: absolute;
        font-size: 15px;
        top: 70px;
        left: 180px;
        color: #ffd100;
    }
    .fursona-container {
        position: absolute;
        top: 130px;
        left: 105px;
        width: 360px;
        height: 500px;
    }
    .fursona {
        object-fit: cover;
        object-position: 35% center;
        width: 100%;
        height: 100%;
    }
    .character-page {
        position: absolute;
        background-color: transparent;
        border: transparent;
        top: 700px;
        left: 55px;
        height: 45px;
        width: 105px;
    }
</style>

<script>
    window.onload = function() {

        const age = document.getElementById("age");
        if (age) {
            const birthday = new Date ("March 13, 2004 00:00:00");
            const date = new Date();

            if (date.getMonth() < birthday.getMonth() || (date.getMonth() == birthday.getMonth() && date.getDate() < birthday.getDate())) {
                age.textContent = (date.getFullYear() - 2005).toString();
            } else if (date.getMonth() == birthday.getMonth() && date.getDate() >= birthday.getDate()) {
                age.textContent = (date.getFullYear() - 2004).toString();
            } else {
                age.textContent = (date.getFullYear() - 2004).toString();
            }
        }
    }
</script>