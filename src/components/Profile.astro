<!DOCTYPE html>
<html>
    <div class="cards">
        <article class="card">
            <header class="name">
                <span>Sam Young</span>
            </header>
            <div class="content">
                Level <span id="age"></span> Goat Computer Scientist
            </div>
        </article>
    </div>
</html>

<style>
    .name {
        display: flex;
        background-image: url('/My-Website//name.png');
        background-size: contain;
        background-repeat: no-repeat;
        height: 50px;
        color: white;
    }
    .name span {
        font-size: 15px;
        padding-top: 12px;
        padding-left: 245px;
    }
</style>

<script>
    window.onload = function() {

        const age = document.getElementById("age");
        if (age) {
            const birthday = new Date ("March 13, 2004 00:00:00");
            const date = new Date();

            if (date.getMonth() < birthday.getMonth() || (date.getMonth() == birthday.getMonth() && date.getDate() < birthday.getDate())) {
                age.textContent = (date.getFullYear() - 2005).toString();
            } else if (date.getMonth() == birthday.getMonth() && date.getDate() >= birthday.getDate()) {
                age.textContent = (date.getFullYear() - 2004).toString();
            } else {
                age.textContent = (date.getFullYear() - 2004).toString();
            }
        }
    }
</script>